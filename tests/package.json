{
  "name": "ts-tests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=20",
    "npm": ">=9.6.4"
  },
  "type": "commonjs",
  "watch": {
    "build": {
      "patterns": [
        "../"
      ],
      "ignore": [
        "../tests",
        "../target",
        "../build"
      ],
      "extensions": "rs",
      "quiet": true,
      "inherit": true
    },
    "test": {
      "patterns": [
        "../target/release/madara",
        "./tests/**"
      ],
      "extensions": "ts,html,scss",
      "quiet": true,
      "inherit": true,
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "test-with-logs": "mocha --printlogs -r ts-node/register 'tests/**/test-*.ts'",
    "setup-local-typescript-api": "rm -rf node_modules/@keep-starknet-strange/madara-api-augment && cd ../typescript-api && npm run build && cp -r build ../tests/node_modules/@keep-starknet-strange/madara-api-augment",
    "pre-build-contracts": "ts-node tools/pre-build-contracts.ts && npx prettier -w ./contracts/compiled/*.json",
    "test": "echo 'WARNING Make sure to use node >= 20 otherwise it will not run' && mocha --parallel -r ts-node/register 'tests/**/test-*.ts' -- -j 4",
    "test-seq": "mocha -r ts-node/register 'tests/**/test-*.ts'",
    "smoke-test": "npm run mocha-smoke -- 'smoke-tests/**/test-*.ts'",
    "smoke-test-single": "npm run mocha-smoke -- 'smoke-tests/test-historic-compatibility.ts'",
    "mocha-smoke": "mocha -r ts-node/register -r ./util/smokeFixtures.ts",
    "fork-test": "mocha -r ts-node/register 'fork-tests/**/test-pov*.ts'",
    "contract-simulation": "DEBUG=contract* CUSTOM_SPEC_PATH=/tmp/fork-data/madara-state.mod.json BASE_PATH=/tmp/fork-data/madara/para-alith ./node_modules/.bin/mocha -r ts-node/register fork-tests/test-contract*.ts",
    "zombie-test": "mocha -r ts-node/register 'zombie-tests/**/test-*.ts'",
    "watch": "npm-watch",
    "build": "npx tsc && cp -r contracts build/",
    "build-clean": "rm -r node_modules && npm i && npm run build",
    "current-test": "mocha -r ts-node/register",
    "lint": "npx prettier --write . && npx eslint --fix .",
    "lint-check": "npx prettier --check . && npx eslint .",
    "clean": "rimraf *.log binaries/* runtimes/* specs/*"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@keep-starknet-strange/madara-api-augment": "^0.1.4",
    "@polkadot/api": "^10.1.4",
    "@polkadot/api-augment": "^10.1.4",
    "@polkadot/apps-config": "^0.122.2",
    "@polkadot/keyring": "^11.1.1",
    "@polkadot/util": "^11.1.1",
    "@substrate/txwrapper-core": "^3.2.2",
    "@substrate/txwrapper-substrate": "^3.2.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^9.0.0",
    "@types/tcp-port-used": "^1.0.1",
    "@zombienet/cli": "^1.3.35",
    "@zombienet/orchestrator": "^0.0.26",
    "bottleneck": "^2.19.5",
    "chai": "^4.3.4",
    "debug": "^4.3.2",
    "mocha": "^10.1.0",
    "npm-watch": "^0.9.0",
    "nunjucks": "^3.2.3",
    "polkadot-launch": "^2.3.0",
    "rimraf": "^3.0.2",
    "starknet": "^4.22.0",
    "tcp-port-used": "^1.0.2",
    "ts-node": "^10.9.1"
  },
  "overrides": {
    "@polkadot/api": "$@polkadot/api",
    "@polkadot/api-derive": "$@polkadot/api",
    "@polkadot/api-base": "$@polkadot/api",
    "@polkadot/api-augment": "$@polkadot/api-augment",
    "@polkadot/rpc-augment": "$@polkadot/api",
    "@polkadot/rpc-core": "$@polkadot/api",
    "@polkadot/keyring": "$@polkadot/keyring",
    "@polkadot/rpc-provider": "$@polkadot/api",
    "@polkadot/types-create": "$@polkadot/api",
    "@polkadot/types-augment": "$@polkadot/api",
    "@polkadot/types-support": "$@polkadot/api",
    "@polkadot/types-codec": "$@polkadot/api",
    "@polkadot/types": "$@polkadot/api",
    "@polkadot/types-known": "$@polkadot/api",
    "@polkadot/util": "$@polkadot/util",
    "@polkadot/util-crypto": "$@polkadot/util"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "deep-equal-in-any-order": "^2.0.6",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.0.4"
  }
}
