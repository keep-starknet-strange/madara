[Unit]
Description=Madara Dev Node

[Service]
WorkingDirectory=/home/admin/madara
Restart=on-failure
ExecStart=/home/admin/madara/target/release/madara --dev --rpc-external --execution native --pool-limit=100000 --pool-kbytes=500000 --rpc-methods=unsafe --rpc-cors=all --in-peers=0 --out-peers=1 --no-telemetry
ExecReload=/bin/kill -HUP
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
